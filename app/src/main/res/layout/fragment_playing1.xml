      android:layout_width="match_parent"                android:layout_height="match_parent"                android:layout_marginLeft="-50dp"                android:background="@color/colorAccent"                android:rotation="@integer/tilting_angle"                android:transformPivotX="0dp"                android:transformPivotY="0dp"/>            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="match_parent">                <LinearLayout                    android:id="@+id/namedetails"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginTop="20dp"                    android:orientation="vertical">                    <TextView                        android:id="@+id/song_title"                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:ellipsize="marquee"                        android:maxLines="1"                        android:paddingEnd="4dp"                        android:paddingStart="4dp"                        android:paddingTop="4dp"                        android:textColor="@color/white"                        android:textSize="35sp"                        tools:text="Sonu Nigam"/>                    <TextView                        android:id="@+id/song_artist"                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:ellipsize="end"                        android:maxLines="1"                        android:paddingEnd="4dp"                        android:paddingStart="4dp"                        android:textColor="@color/white"                        android:textSize="30sp"                        tools:text="Agneepath"/>                </LinearLayout>                <RelativeLayout                    android:id="@+id/info"                    android:layout_width="match_parent"                    android:layout_height="?attr/actionBarSize"                    android:layout_below="@+id/namedetails"                    android:layout_marginEnd="4dp"                    android:layout_marginStart="4dp"                    android:layout_marginTop="4dp"                    android:orientation="horizontal">                    <ImageView                        android:id="@+id/shuffle_song"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_centerVertical="true"                        android:layout_marginEnd="4dp"                        android:layout_marginStart="4dp"                        android:layout_toEndOf="@+id/repeat_song"                        android:background="@drawable/ripple"                        android:tint="@android:color/white"                        app:srcCompat="@drawable/shuf_off"/>                    <ImageView                        android:id="@+id/repeat_song"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_centerVertical="true"                        android:layout_marginEnd="4dp"                        android:layout_marginStart="4dp"                        android:background="@drawable/ripple"                        android:tint="@android:color/white"                        app:srcCompat="@drawable/rep_no"/>                    <ImageButton                        android:id="@+id/action_favorite"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_centerVertical="true"                        android:layout_marginEnd="4dp"                        android:layout_marginStart="4dp"                        android:layout_toEndOf="@+id/shuffle_song"                        android:background="@drawable/ripple"                        android:contentDescription="@null"                        android:scaleType="fitCenter"                        android:paddingBottom="4dp"                        android:src="@drawable/ic_action_favorite_outline"/>                    <ImageButton                        android:id="@+id/action_share"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_centerVertical="true"                        android:layout_marginEnd="4dp"                        android:layout_marginStart="4dp"                        android:layout_toEndOf="@+id/action_favorite"                        android:background="@drawable/ripple"                        android:tint="@android:color/white"                        android:paddingBottom="8dp"                        app:srcCompat="@drawable/shares"/>                    <ImageButton                        android:id="@+id/eq_button"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_centerVertical="true"                        android:layout_marginEnd="4dp"                        android:layout_marginStart="4dp"                        android:paddingBottom="8dp"                        android:layout_toEndOf="@+id/action_share"                        android:background="@drawable/ripple"                        android:tint="@android:color/white"                        app:srcCompat="@drawable/eq"/>                    <ImageButton                        android:id="@+id/menu_button"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_centerVertical="true"                        android:layout_centerHorizontal="true"                        android:layout_marginEnd="4dp"                        android:paddingBottom="8dp"                        android:layout_marginStart="4dp"                        android:layout_toEndOf="@+id/eq_button"                        android:background="@drawable/ripple"                        android:tint="@android:color/white"                        app:srcCompat="@drawable/ic_menu"/>                </RelativeLayout>            </RelativeLayout>        </FrameLayout>        <android.support.v4.widget.SlidingPaneLayout            android:id="@+id/slidingpanelayout"            android:layout_width="match_parent"            android:layout_height="0dp"            android:layout_gravity="center"            android:layout_marginTop="20dp"            android:layout_weight="7"            android:clickable="true"            android:gravity="center"            android:orientation="vertical">            <FrameLayout                android:layout_width="match_parent"                android:layout_height="match_parent">                <android.support.v4.view.ViewPager                    android:id="@+id/pagerPlaying3"                    android:layout_width="match_parent"                    android:layout_height="match_parent"/>            </FrameLayout>            <FrameLayout                android:layout_width="match_parent"                android:layout_height="match_parent"                android:layout_marginLeft="50dp">                <android.support.v7.widget.RecyclerView                    android:id="@+id/commonrv"                    android:layout_width="match_parent"                    android:layout_height="match_parent"                    android:fadeScrollbars="true"/>            </FrameLayout>        </android.support.v4.widget.SlidingPaneLayout>    </LinearLayout></android.support.design.widget.CoordinatorLayout>