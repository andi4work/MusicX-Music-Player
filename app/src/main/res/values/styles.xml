<resources>

    <style name="ThemeBaseLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryLight</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="accentColor">@color/colorAccent</item>
        <item name="iconColor">@android:color/black</item>
        <item name="cardStyle">@style/cardStyleLight</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="toolbar_popup_theme">?toolbar_popup_theme</item>
        <item name="windowBackground">@color/lightBg</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@color/lightBg</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">?attr/colorPrimary</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_close_black_24dp</item>
        <item name="ate_key">light_theme</item>
    </style>

    <style name="ThemeBaseDark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDarkTheme</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDarkTheme</item>
        <item name="colorAccent">@color/colorAccentDarkTheme</item>
        <item name="cardStyle">@style/cardStyleDark</item>
        <item name="accentColor">@color/colorAccentDarkTheme</item>
        <item name="iconColor">@android:color/white</item>
        <item name="android:windowBackground">@color/darkBg</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowBackground">@color/darkBg</item>
        <item name="toolbar_popup_theme">?toolbar_popup_theme</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">?attr/colorPrimary</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_close_black_24dp</item>
        <item name="ate_key">dark_theme</item>
    </style>

    <style name="ThemeBaseBlack" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorPrimary">@color/colorPrimaryBlack</item>
        <item name="android:colorAccent">@color/colorAccentBlack</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryBlack</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="toolbar_popup_theme">?toolbar_popup_theme</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@color/colorPrimaryBlack</item>
        <item name="windowBackground">@color/colorPrimaryBlack</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="cardStyle">@style/cardStyleBlack</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">?attr/colorPrimary</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_close_black_24dp</item>
        <item name="ate_key">black_theme</item>
    </style>

    <style name="AppThemeLight" parent="ThemeBaseLight"/>
    <style name="AppThemeDark" parent="ThemeBaseDark"/>
    <style name="AppThemeBlack" parent="ThemeBaseBlack"/>
    <style name="AppThemeNormalLight" parent="ThemeBaseLight"/>
    <style name="AppThemeNormalDark" parent="ThemeBaseDark"/>
    <style name="AppThemeNormalBlack" parent="ThemeBaseBlack"/>

    <style name="cardStyleLight" parent="CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">8dp</item>
    </style>

    <style name="cardStyleDark" parent="CardView">
        <item name="cardBackgroundColor">@color/MaterialGrey</item>
        <item name="cardElevation">8dp</item>
    </style>

    <style name="cardStyleBlack" parent="CardView">
        <item name="cardBackgroundColor">@android:color/black</item>
        <item name="cardElevation">8dp</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="FabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="elevation">8dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">?attr/accentColor</item>
    </style>


    <style name="ButtonStyle">
        <item name="colorControlNormal">?android:attr/textColorSecondary</item>
        <item name="colorControlHighlight">?attr/ripple_color</item>
    </style>

</resources>